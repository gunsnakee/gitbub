<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meiliwan.emall.sp2.dao.ExamTopicDao" >
  <resultMap id="BaseResultMap" type="com.meiliwan.emall.sp2.bean.ExamTopic" >
    <id column="topic_id" property="topicId" jdbcType="INTEGER" />
    <result column="topic_name" property="topicName" jdbcType="VARCHAR" />
    <result column="answer_json" property="answerJson" jdbcType="VARCHAR" />
    <result column="correct_val" property="correctVal" jdbcType="CHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    topic_id, topic_name, answer_json, correct_val, create_time
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from exam_topic
    where topic_id = #{topicId,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from exam_topic
    where topic_id = #{topicId,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.meiliwan.emall.sp2.bean.ExamTopic" useGeneratedKeys="true" keyProperty="topicId">
    insert into exam_topic (topic_id, topic_name, answer_json, 
      correct_val, create_time)
    values (#{topicId,jdbcType=INTEGER}, #{topicName,jdbcType=VARCHAR}, #{answerJson,jdbcType=VARCHAR}, 
      #{correctVal,jdbcType=CHAR}, #{createTime,jdbcType=TIMESTAMP})
  </insert>
  <insert id="insertSelective" parameterType="com.meiliwan.emall.sp2.bean.ExamTopic" useGeneratedKeys="true" keyProperty="topicId">
    insert into exam_topic
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="topicId != null" >
        topic_id,
      </if>
      <if test="topicName != null" >
        topic_name,
      </if>
      <if test="answerJson != null" >
        answer_json,
      </if>
      <if test="correctVal != null" >
        correct_val,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="topicId != null" >
        #{topicId,jdbcType=INTEGER},
      </if>
      <if test="topicName != null" >
        #{topicName,jdbcType=VARCHAR},
      </if>
      <if test="answerJson != null" >
        #{answerJson,jdbcType=VARCHAR},
      </if>
      <if test="correctVal != null" >
        #{correctVal,jdbcType=CHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.meiliwan.emall.sp2.bean.ExamTopic" >
    update exam_topic
    <set >
      <if test="topicName != null" >
        topic_name = #{topicName,jdbcType=VARCHAR},
      </if>
      <if test="answerJson != null" >
        answer_json = #{answerJson,jdbcType=VARCHAR},
      </if>
      <if test="correctVal != null" >
        correct_val = #{correctVal,jdbcType=CHAR},
      </if>
    </set>
    where topic_id = #{topicId,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.meiliwan.emall.sp2.bean.ExamTopic" >
    update exam_topic
    set topic_name = #{topicName,jdbcType=VARCHAR},
      answer_json = #{answerJson,jdbcType=VARCHAR},
      correct_val = #{correctVal,jdbcType=CHAR}
    where topic_id = #{topicId,jdbcType=INTEGER}
  </update>
    <!-- 下边是需要手动配置 自定义 查询条件 -->
    <sql id="selectCondition">
        <where>
            <trim suffixOverrides="and">
                <if test="entity != null">
                    <if test="entity.topicId!=null and entity.topicId &gt;0">
                        and uid=#{entity.topicId,jdbcType=INTEGER}
                    </if>
                </if>
            </trim>
            <trim suffixOverrides="and">
                <if test="whereSql!=null">
                    and ${whereSql}
                </if>
            </trim>
        </where>
    </sql>

    <!-- 根据条件查询 -->
    <select id="getListByEntityAndPageInfo" resultMap="BaseResultMap" parameterType="com.meiliwan.emall.sp2.bean.ActivityBean">
        select
        <include refid="Base_Column_List" />
        from exam_topic
        <include refid="selectCondition" />
        <if test="orderBy!=null">
            ${orderBy}
        </if>
        <if test="pageInfo!=null">
            limit ${pageInfo.startIndex} ,${pageInfo.pagesize}
        </if>
    </select>
    <!-- 查询总数 -->
    <select id="getTotalByEntity"
            resultType="java.lang.Integer">
        select count(*) from exam_topic
        <include refid="selectCondition" />
    </select>

    <!-- 随机取出移到题目 -->
    <select id="getTopicByRand" resultMap="BaseResultMap">
         select
         <include refid="Base_Column_List"/>
         from exam_topic order by rand() limit 1
    </select>
</mapper>