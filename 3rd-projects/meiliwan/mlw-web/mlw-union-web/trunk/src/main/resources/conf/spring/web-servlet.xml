	<bean id="controllerPerformanceMonitor"
          class="com.meiliwan.emall.commons.web.interceptor.ControllerPrefMonitorInterceptor" />
    <aop:config>
        <aop:pointcut id="allDaoMethods" expression="execution(*  com.meiliwan.emall.pay.gateway.*.*(..)) "/>
        <aop:advisor pointcut-ref="allDaoMethods" advice-ref="controllerPerformanceMonitor"  />
    </aop:config>
     -->
    <import resource="union-service-quartz.xml" />
    <import resource="union/union-query-service.xml"  /> 
    <import resource="union/sfunion-order.xml" />
</beans>