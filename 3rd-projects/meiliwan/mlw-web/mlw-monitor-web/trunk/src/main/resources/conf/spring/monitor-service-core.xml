	<!-- 事务配置 -->
    <bean name="baseTransactionManager"
          class="com.meiliwan.emall.core.db.shard.spring.support.MultiDataSourceTransactionManager">
    </bean>
    <tx:advice id="baseTxAdvice" transaction-manager="baseTransactionManager">
        <tx:attributes>
            <tx:method name="*" propagation="NOT_SUPPORTED" />
        </tx:attributes>
    </tx:advice>
    <!-- baseService事务管理 -->
   <aop:config>

        <aop:pointcut id="baseServiceOperation"
                      expression="execution(* com.meiliwan.emall.*.dao.impl.*.*(..)) || execution(* com.meiliwan.emall.core.db.BaseDao.*(..))" />

        <aop:advisor advice-ref="baseTxAdvice" pointcut-ref="baseServiceOperation" />
    </aop:config>
    
</beans>
