<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NS_User">

	<insert id="insertUser" parameterType="com.meiliwan.emall.core.db.shard.demo.dao.entity.UserEntity">
		insert into $[user]$(
			id,
			name
		) values (
			#{id},
			#{name}
		)
	</insert>
	
	<select id="findUser" resultType="com.meiliwan.emall.core.db.shard.demo.dao.entity.UserEntity">
	select id,name from $[user]$ where id = #{id,jdbcType=INTEGER}
	<if test="pageInfo!=null">
            limit ${pageInfo.startIndex} ,${pageInfo.pagesize}
    </if>
	</select>
	
</mapper>